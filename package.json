{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext '.js,.ts' './packages/*/src/**/*'",
    "build:source": "lerna exec --parallel \"babel src --out-dir build --extensions '.js,.ts' --ignore '**/__tests__/**' --source-maps --delete-dir-on-start --config-file=../../.babelrc\"",
    "build:def": "lerna exec --parallel \"tsc --emitDeclarationOnly --outDir build\"",
    "prepare1": "yarn build:source && yarn build:def",
    "typecheck": "tsc --noEmit",
    "add-contributor": "all-contributors add",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "escape-string-regexp": "^2.0.0",
    "lerna": "^3.13.2",
    "node-fetch": "^2.3.0",
    "rimraf": "^2.6.3",
    "strip-ansi": "^5.2.0",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-flow-strip-types": "^7.4.0",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@callstack/eslint-config": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "all-contributors-cli": "^4.5.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "jest": "^24.7.1",
    "typescript": "^3.4.3"
  }
}
